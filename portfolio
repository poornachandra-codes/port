    <script>
        // Scroll reveal animation
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.animate-on-scroll').forEach(el => {
            observer.observe(el);
        });

        // Extra hover effect for skill tags (smoother JS add)
        document.querySelectorAll('.skill-tag').forEach(tag => {
            tag.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px) scale(1.05)';
            });

            tag.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Typing / rotating effect for role text
        const roles = [
            "B.Tech IT (3rd Year) | Multi-Cloud & DevOps Enthusiast",
            "Aspiring Cloud / DevOps Engineer",
            "Learning AWS | Azure | GCP",
            "Eager to Learn, Build & Contribute"
        ];

        const roleElement = document.getElementById('role-text');
        let roleIndex = 0;
        let charIndex = 0;
        let typing = true;

        function typeRole() {
            const currentRole = roles[roleIndex];

            if (typing) {
                roleElement.textContent = currentRole.slice(0, charIndex + 1);
                charIndex++;

                if (charIndex === currentRole.length) {
                    typing = false;
                    setTimeout(typeRole, 1500); // pause at full text
                    return;
                }
            } else {
                roleElement.textContent = currentRole.slice(0, charIndex - 1);
                charIndex--;

                if (charIndex === 0) {
                    typing = true;
                    roleIndex = (roleIndex + 1) % roles.length;
                }
            }

            setTimeout(typeRole, typing ? 60 : 40);
        }

        // Start typing animation
        setTimeout(typeRole, 800);

        // Typing effect for main name (like original)
        const title = document.querySelector('.header h1');
        const originalText = title.textContent;
        title.textContent = '';

        let i = 0;
        const typeWriterName = () => {
            if (i < originalText.length) {
                title.textContent += originalText.charAt(i);
                i++;
                setTimeout(typeWriterName, 90);
            }
        };

        setTimeout(typeWriterName, 200);
    </script>
</body>
